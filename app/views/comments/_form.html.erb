<%= simple_form_for([@post, @post.comments.build]) do |f| %>
<div class="field">
  <div class="control">
    <%= f.input :name, label: 'Title', input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :comment, label: 'Write your comment', input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
  </div>
</div>
<%= f.button :submit, 'Add comment', class: "button is-success" %>
<% end %>