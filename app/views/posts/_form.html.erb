<div class="section container">
  <%= simple_form_for @post do |f| %>
  <div class="field">
        <div class="control">
        <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
        </div>
  </div>
  <div class="field">
        <div class="control">
        <%= f.input :description, label: 'Add a short description', input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'} %>
        </div>
  </div>
    <div class="field">
        <div class="control">
        <%= f.input :content, label: 'Write down your note', input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label'} %>
        </div>
    </div>
    <%=  f.button :submit, value: "#{f.object.new_record? ? 'Save note' : 'Update'}", class: 'button is-primary' %>
  <% end %>
  </div>