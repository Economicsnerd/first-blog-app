<%= content_for :page_title, @post.title%>
<%= content_for :page_description, @post.description%>
<%# <%= content_for :page_image, @post.image%>

<section class="section">
    <div class="container">
    <nav class="level">
     <%# Left Side %>
     <div class = "level-left">
        <strong>
            <p class = level-item>
                Blog created @ <%=@post.created_at.strftime("%Y %m %d %H:%M")%>
            </p>  
        </strong>    
     </div>
     <div class = "level-right">
        <p class = "level-item">
            <%= link_to "Edit Task", edit_post_path(@post), class: "button"%>
        </p>
        <p class = "level-item">
            <%= link_to "Complete", post_path(@post), method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-success"%>
        </p>
     </div>
    </nav>
    <hr />
        <div class="title">
        <%= @post.title%>
    </div>
    <div class="content">
        <%= @post.description%>
    </div>
    <div class="content">
        <%= @post.content%>
    </div>
    </div>
</section>

<section class="section comments">
	<div class="container">
		<h2 class="subtitle is-5"><strong><%= @post.comments.count %></strong> Notes</h2>
		<%= render @post.comments %>
		<div class="comment-form">
			<hr />
			<h3 class="subtitle is-3">Add a comment to your blog post</h3>
	 		<%= render 'comments/form' %>
		</div>
	</div>
</section>